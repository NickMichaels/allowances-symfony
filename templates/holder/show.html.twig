{% extends 'base.html.twig' %}

{% block title %}Holder{% endblock %}

{% block body %}
    <h1>Holder</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ holder.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ holder.name }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ holder.birthdate ? holder.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ holder.age }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ holder.rate }}</td>
            </tr>
            <tr>
                <th>Spend_percent</th>
                <td>{{ holder.spendPercent }}</td>
            </tr>
            <tr>
                <th>Save_percent</th>
                <td>{{ holder.savePercent }}</td>
            </tr>
            <tr>
                <th>Give_percent</th>
                <td>{{ holder.givePercent }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_holder_index') }}">back to list</a>

    <a href="{{ path('app_holder_edit', {'id': holder.id}) }}">edit</a>

    {{ include('holder/_delete_form.html.twig') }}
