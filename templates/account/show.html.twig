{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <h1>Account</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ account.nickname }}</td>
            </tr>
            <tr>
                <th>Account_type</th>
                <td>{{ account.accountType }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Transactions</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Memo</th>
                <th>Transaction Type</th>
                <th>Amount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>{{ transaction.date }}</td>
                <td>{{ transaction.memo }}</td>
                <td>{{ transaction.transaction_type }}</td>
                <td>{{ transaction.amount }}</td>
                <td>{{ account.accountType }}</td>
                <td>
                    <a href="{{ path('app_account_show', {'id': account.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_transaction_new', {'account': account.id}) }}">New Transaction</a>

    <a href="{{ path('holder_accounts', {'id': holder.id}) }}">back to list</a>

{% endblock %}
