{% extends 'base.html.twig' %}

{% block title %}Transaction for {{ account.nickname }}{% endblock %}

{% block body %}
    <h1>Transaction for {{ account.nickname }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Transaction_type</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Memo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>{{ transaction.id }}</td>
                <td>{{ transaction.transactionType.value }}</td>
                <td>{{ transaction.amount }}</td>
                <td>{{ transaction.date ? transaction.date|date('Y-m-d') : '' }}</td>
                <td>{{ transaction.memo }}</td>
                <td>
                    <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}">show</a>
                    <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_transaction_new', {'account': account.id}) }}">New Transaction</a>

    <a href="{{ path('holder_accounts', {'id': account.holder.id}) }}">back to list</a>

{% endblock %}
